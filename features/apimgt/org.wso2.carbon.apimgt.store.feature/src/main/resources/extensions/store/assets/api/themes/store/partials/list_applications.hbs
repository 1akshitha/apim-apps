<div id='application-table-data'>
    <table class='table table-bordered'>
        <thead>
        <tr>
            <th>{{t "Name"}}</th>
            <th>{{t "Tier"}}</th>
            <th>{{t "Status"}}</th>
            <th>{{t "Callback URL"}}</th>
            <th>{{t "Description"}}</th>
            <th>{{t "Actions"}}</th>
        </tr>
        </thead>
        <tbody>
        {{#each applications}}
            <tr id='tr-application-{{id}}-data'>
                <td>{{name}}</td>
                <td>{{tier}}</td>
                <td>{{status}}</td>
                <td>{{callbackUrl}}</td>
                <td>{{description}}</td>
                <td>
                    <a href="javascript:changeAppRowtoEditView('{{name}}','{{../cuser.username}}','{{id}}','{{tier}}','{{status}}','{{callbackUrl}}','{{description}}');"><i
                            class='icon-edit'></i> {{t "Edit"}}</a>
                    <a href="javascript:removeApplication('{{name}}','{{../cuser.username}}','{{id}}');"><i
                            class='icon-trash'></i> {{t "Delete"}}</a>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>
